#!/bin/sh
# Prints out the volume and accompanying emoji
volume="$(pamixer --get-volume)"
mute="$(pamixer --get-mute)"
# echo $getvolume
if [ $volume -eq 0 ] || [ $mute == true ]; then
    echo "ðŸ”‡ $volume%"
elif [ $volume -eq 100 ] ; then
    echo "ðŸ“¢ $volume%"
elif (( $volume < 40 )) ; then
    echo "ðŸ”‰ $volume%"
else
    echo "ðŸ”Š $volume%"
fi
